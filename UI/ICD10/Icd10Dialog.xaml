<Window x:Class="YellowstonePathology.UI.ICD10.Icd10Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Icd10Dialog" Height="600" Width="800">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>       
        <Grid.ColumnDefinitions>            
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>            
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ListView Name="ListViewSpecimenDiagnosis" Margin="2,2,2,2" Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Path=SpecimenDiagnosisList}">
            <ListView.View>
                <GridView AllowsColumnReorder="True">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Header="Specimen" Width="300"/>                    
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Diagnosis}" Header="Diagnosis" Width="300"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=MainTerm}" Header="MainTerm" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>         
        
    </Grid>
</Window>
