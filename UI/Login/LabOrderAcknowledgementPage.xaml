<UserControl x:Class="YellowstonePathology.UI.Login.LabOrderAcknowledgementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
	<Grid>
		<Grid.Resources>
			<DataTemplate x:Key="DataTemplateTestResultItem">
				<StackPanel Margin="2">
					<TextBlock Margin="2,2,2,2" VerticalAlignment="Center" Text="{Binding Path=Element[TestName].Value}"></TextBlock>
				</StackPanel>
			</DataTemplate>

			<HierarchicalDataTemplate x:Key="DataTemplatePanelTestResultItem" ItemsSource="{Binding Path=Element[TestOrders].Elements[TestOrder]}" ItemTemplate="{StaticResource DataTemplateTestResultItem}">
				<StackPanel Orientation="Horizontal" Margin="2">
					<TextBlock Margin="2,2,2,2" Width="570" VerticalAlignment="Center" TextAlignment="Center" Text="{Binding Path=Element[Comment].Value}"></TextBlock>
					<TextBlock Margin="2,2,2,2" Width="110" VerticalAlignment="Center" Text="{Binding Path=Element[OrderTime].Value}"></TextBlock>
				</StackPanel>
			</HierarchicalDataTemplate>

			<HierarchicalDataTemplate x:Key="DataTemplateTestResultCollection" ItemsSource="{Binding Path=Element[PanelOrders].Elements[PanelOrder]}" ItemTemplate="{StaticResource DataTemplatePanelTestResultItem}">
				<StackPanel Orientation="Horizontal" Margin="2">
					<TextBlock Margin="2,2,2,2" Width="80" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Path=Element[ReportNo].Value}"></TextBlock>
				</StackPanel>
			</HierarchicalDataTemplate>
		</Grid.Resources>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" BorderBrush="Transparent" BorderThickness="0" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"></Border>
		<TextBlock Grid.Column="0" Grid.Row="0" Margin="20,2,2,2" Text="{Binding Path=PageHeaderText}" VerticalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"></TextBlock>

		<Grid Grid.Column="0" Grid.Row="1" Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="*"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
			</Grid.RowDefinitions>
			<StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
				<TextBlock Margin="40, 2, 2, 2" Width="200">Order</TextBlock>
				<TextBlock Margin="2" Width="450" TextAlignment="Center">Comment</TextBlock>
				<TextBlock Margin="2" Width="110">Order Time</TextBlock>
			</StackPanel>
			
			<TreeView Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Path=OrdersToAcknowledge.Document.Elements[AccessionOrder]}" BorderThickness="0"
					  ItemTemplate="{StaticResource DataTemplateTestResultCollection}">
			</TreeView>

			<Button Grid.Column="0" Grid.Row="2" Click="ButtonAcknowledge_Click"  Margin="5" Height="35" Width="150" HorizontalAlignment="Right" ToolTip="Acknowledge and print orders">
				<StackPanel Orientation="Horizontal">
					<Image Source="/Resources/Acknowledge.ico"></Image>
					<TextBlock Margin="4,0,2,0" VerticalAlignment="Center">Acknowledge</TextBlock>
				</StackPanel>
			</Button>
            
		</Grid>

		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Transparent" BorderThickness="0" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"></Border>
			<Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Name="ButtonNext" Margin="5,5,5,5" Click="ButtonFinish_Click" Width="100" Height="40" HorizontalAlignment="Right">Finish</Button>
		</Grid>
	</Grid>
</UserControl>
