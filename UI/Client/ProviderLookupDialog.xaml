<Window x:Class="YellowstonePathology.UI.Client.ProviderLookupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Provider Lookup" Height="400" Width="900" WindowStyle="ToolWindow">
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		
		<TabControl Grid.Row="0" Margin="2,2,2,2">
			<TabItem Header="Provider">
				<Grid Margin="2,5,2,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="*"></RowDefinition>
					</Grid.RowDefinitions>
										
					<TextBlock Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Provider Name (last, first):" />
					<TextBox Grid.Column="1" Grid.Row="0" Name="TextBoxProviderName" Margin="2,2,2,2" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" KeyUp="TextBoxProviderName_KeyUp" />					
					
					<ListView Name="ListBoxProviders" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="2,2,2,2" MouseDoubleClick="ListBoxProviders_MouseDoubleClick"
							 ItemsSource="{Binding Path=ProviderCollection}">
						<ListView.View>
							<GridView>
								<GridViewColumn Header="First Name" Width="200" DisplayMemberBinding="{Binding Path=FirstName}" />								
								<GridViewColumn Header="Last Name" Width="200" DisplayMemberBinding="{Binding Path=LastName}" />
                                <GridViewColumn Header="Middle Initial" Width="90" DisplayMemberBinding="{Binding Path=MiddleInitial}" />
								<GridViewColumn Header="Credentials" Width="100" DisplayMemberBinding="{Binding Path=Credentials}" />
							</GridView>
						</ListView.View>
					</ListView>
				</Grid>
			</TabItem>
			
			<TabItem Header="Client">
                <Grid Margin="2,5,2,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Client Name:" />
                    <TextBox Grid.Column="1" Grid.Row="0" Name="TextBoxClientName" Margin="2,2,2,2" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" KeyUp="TextBoxClientName_KeyUp" />

                    <ListView Name="ListBoxClients" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="2,2,2,2" MouseDoubleClick="ListBoxClients_MouseDoubleClick"
							 ItemsSource="{Binding Path=ClientCollection}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Client Id" Width="100" DisplayMemberBinding="{Binding Path=ClientId}" />
                                <GridViewColumn Header="Client Name" Width="200" DisplayMemberBinding="{Binding Path=ClientName}" />
                                <GridViewColumn Header="City" Width="200" DisplayMemberBinding="{Binding Path=City}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

			<TabItem Header="Provider/Client">

			</TabItem>
		</TabControl>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
			<Button Margin="5" Height="30" Width="100" Content="New" Click="ButtonNewProvider_Click" />			
		</StackPanel>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Margin="5" Height="30" Width="100" Content="OK" Click="ButtonOK_Click" />
		</StackPanel>
	</Grid>
</Window>
