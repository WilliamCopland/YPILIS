<Window x:Class="YellowstonePathology.UI.Client.ClientEntryV2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Entry" Height="700" Width="700"
		WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">

	<Grid>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		
		<TabControl Grid.Row="0" Margin="5">
			<TabItem Header="General">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"></ColumnDefinition>
						<ColumnDefinition></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
					</Grid.RowDefinitions>
					
					<TextBlock Grid.Column="0" Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Client Id:</TextBlock>
					<TextBlock Grid.Column="1" Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.ClientId}" />

					<TextBlock Grid.Column="0" Grid.Row="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Client Name:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="1" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.ClientName}" />

					<TextBlock Grid.Column="0" Grid.Row="2" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Address:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="2" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.Address}" />

					<TextBlock Grid.Column="0" Grid.Row="3" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >City:</TextBlock>
					<Grid Grid.Column="1" Grid.Row="3">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="2*"></ColumnDefinition>
							<ColumnDefinition Width="Auto"></ColumnDefinition>
							<ColumnDefinition Width="2*"></ColumnDefinition>
							<ColumnDefinition Width="Auto"></ColumnDefinition>
							<ColumnDefinition Width="*"></ColumnDefinition>
						</Grid.ColumnDefinitions>
						
						<TextBox Grid.Column="0" Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.City}" />

						<TextBlock Grid.Column="1" Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >State:</TextBlock>
						<TextBox Grid.Column="2" Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.State}" />

						<TextBlock Grid.Column="3" Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Zip:</TextBlock>
						<TextBox Grid.Column="4" Grid.Row="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.Zip}" />
					</Grid>

					<TextBlock Grid.Column="0" Grid.Row="4" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Long Distance:</TextBlock>
					<CheckBox Grid.Column="1" Grid.Row="4" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding Path=Client.LongDistance}" />

					<TextBlock Grid.Column="0" Grid.Row="5" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Telephone:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="5" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.Telephone}" />

					<TextBlock Grid.Column="0" Grid.Row="6" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Fax:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="6" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.Fax}" />

					<TextBlock Grid.Column="0" Grid.Row="7" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Contact Name:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="7" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.ContactName}" />

					<TextBlock Grid.Column="0" Grid.Row="8" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Abbreviation:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="8" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="{Binding Path=Client.Abbreviation}" />

					<TextBlock Grid.Column="0" Grid.Row="9" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Distribution Type:</TextBlock>
					<ComboBox Grid.Column="1" Grid.Row="9" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" ItemsSource="{Binding Path=DistributionTypeList}"
							  SelectedValue="{Binding Path=Client.DistributionType}" SelectedValuePath="Value" DisplayMemberPath="Name" />

					<TextBlock Grid.Column="0" Grid.Row="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Facility Type:</TextBlock>
					<ComboBox Grid.Column="1" Grid.Row="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" ItemsSource="{Binding Path=FacilityTypes}"
							  SelectedValue="{Binding Path=Client.FacilityType}" />

					<TextBlock Grid.Column="0" Grid.Row="11" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Inactive:</TextBlock>
					<CheckBox Grid.Column="1" Grid.Row="11" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding Path=Client.Inactive}" />

					<TextBlock Grid.Column="0" Grid.Row="12" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Flow Client:</TextBlock>
					<CheckBox Grid.Column="1" Grid.Row="12" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding Path=Client.FlowClient}" />

					<TextBlock Grid.Column="0" Grid.Row="13" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Close Rule Applies:</TextBlock>
					<CheckBox Grid.Column="1" Grid.Row="13" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding Path=Client.CloseRuleApplies}" />

					<TextBlock Grid.Column="0" Grid.Row="14" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >EOM Client:</TextBlock>
					<CheckBox Grid.Column="1" Grid.Row="14" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding Path=Client.EOMClient}" />

					<TextBlock Grid.Column="0" Grid.Row="15" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" >Show physicians on requisition:</TextBlock>
					<CheckBox Grid.Column="1" Grid.Row="15" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="{Binding Path=Client.ShowPhysiciansOnRequisition}" />
				</Grid>
			</TabItem>
			
			<TabItem Header="Membership">
				<ListBox Name="ListBoxPhysicians" Margin="10" HorizontalAlignment="Stretch" BorderThickness="0" IsTabStop="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
						 ItemsSource="{Binding Path=Physicians}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
								<TextBlock Margin="2" Text="{Binding Path=DisplayName}" />
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</TabItem>
		</TabControl>
		
		<StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">			
			<Button Margin="5" Width="120" Height="30" Click="ButtonOk_Click" Content="OK" />
		</StackPanel>
	</Grid>
</Window>
