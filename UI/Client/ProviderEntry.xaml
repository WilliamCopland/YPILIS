<Window x:Class="YellowstonePathology.UI.Client.ProviderEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Provider Entry" Height="500" Width="620" WindowStartupLocation="CenterScreen">
    <Grid Margin="5,5,5,5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		
		<TabControl Grid.Column="0" Grid.Row="0">
			<TabItem Header="General">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"></ColumnDefinition>
						<ColumnDefinition Width="*"></ColumnDefinition>
						<ColumnDefinition Width="*"></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="Auto"></RowDefinition>
						<RowDefinition Height="*"></RowDefinition>
					</Grid.RowDefinitions>

					<TextBlock Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">Physician Id:</TextBlock>
					<TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=Physician.PhysicianID}" Margin="2,2,2,2" VerticalAlignment="Center"></TextBlock>

					<TextBlock Grid.Column="0" Grid.Row="1" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">Last Name:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=Physician.LastName}" Margin="2,2,2,2"></TextBox>					

					<TextBlock Grid.Column="0" Grid.Row="2" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">First Name:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=Physician.FirstName}" Margin="2,2,2,2"></TextBox>					

					<TextBlock Grid.Column="0" Grid.Row="3" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">Middle Initial:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=Physician.MiddleInitial}" Margin="2,2,2,2"></TextBox>					

					<TextBlock Grid.Column="0" Grid.Row="4" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">Display Name:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Path=Physician.DisplayName}" Margin="2,2,2,2"></TextBox>

					<TextBlock Grid.Column="0" Grid.Row="5" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">Credentials:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="5" Text="{Binding Path=Physician.Credentials}" Margin="2,2,2,2"></TextBox>
        
					<TextBlock Grid.Column="0" Grid.Row="6" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center" >NPI:</TextBlock>
					<TextBox Grid.Column="1" Grid.Row="6" Text="{Binding Path=Physician.Npi}" Margin="2,2,2,2"></TextBox>

					<TextBlock Grid.Column="0" Grid.Row="7" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">Active:</TextBlock>
					<CheckBox Grid.Column="1" Grid.Row="7" IsChecked="{Binding Path=Physician.Active}" Margin="2,2,2,2" VerticalAlignment="Center"></CheckBox>

					<TextBlock Grid.Column="0" Grid.Row="8" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">KRAS/BRAF Standing Order:</TextBlock>
					<CheckBox Grid.Column="1" Grid.Row="8" IsChecked="{Binding Path=Physician.KRASBRAFStandingOrder}" Margin="2,2,2,2" VerticalAlignment="Center"></CheckBox>

					<TextBlock Grid.Column="0" Grid.Row="9" Margin="2,2,2,2" HorizontalAlignment="Right" VerticalAlignment="Center">HPV Standing Order Instructions:</TextBlock>
					<ComboBox Grid.Column="1" Grid.Row="9" Margin="2,2,2,2" ItemsSource="{Binding Path=HpvStandingOrders}" SelectedValue="{Binding Path=Physician.HPVStandingOrderCode}"
							  SelectedValuePath="StandingOrderCode" DisplayMemberPath="Description">
					</ComboBox>
		
				</Grid>
			</TabItem>
			
			<TabItem Header="Membership">
				<ListBox Name="ListBoxClients" Margin="10" HorizontalAlignment="Stretch" BorderThickness="0" IsTabStop="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Path=Clients}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
								<TextBlock Margin="2" Text="{Binding Path=ClientName}" />
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</TabItem>
		</TabControl>

		<StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">			
			<Button Margin="5" Width="100" Height="30" Content="OK" Click="ButtonOK_Click"></Button>
			<Button Margin="5" Width="100" Height="30" Content="Cancel" Click="ButtonCancel_Click"></Button>
		</StackPanel>
	</Grid>
</Window>
