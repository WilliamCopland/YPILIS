<Window x:Class="YellowstonePathology.Policy.PolicyExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YellowstonePathology.UI"
        mc:Ignorable="d"
        Title="PolicyExplorer" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <ListView Grid.Column="0" Grid.Row="0" Name="ListViewDirectories" Margin="2,2,2,2" ItemsSource="{Binding Path=DirectoryCollection}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Path=DirectoryId}" Width="100" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Path=DirectoryName}" Width="100" />
                    <GridViewColumn Header="ParentId" DisplayMemberBinding="{Binding Path=ParentId}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
