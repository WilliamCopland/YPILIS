<UserControl x:Class="YellowstonePathology.UI.Login.FinalizeAccession.HL7CopyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YellowstonePathology.UI.Login.FinalizeAccession"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" FontSize="14" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Transparent" BorderThickness="0" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"></Border>
        <TextBlock Grid.Column="0" Grid.Row="0" Margin="20,2,2,2" Text="{Binding Path=PageHeaderText}" VerticalAlignment="Center" Foreground="White" FontSize="16" FontWeight="Bold"></TextBlock>

        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" Margin="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" TextWrapping="Wrap" 
                           Text="An HL7 distribution already exists for this case and a second may not be added.  You can add a Fax or a Web Service distribution or continue without adding the distribution." />
            </Grid>

        </Grid>

        <Border Grid.Row="2" BorderBrush="Transparent" BorderThickness="0" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}"></Border>
        <Button Grid.Column="1" Grid.Row="2" Name="ButtonFax" Margin="5,5,5,5" Click="ButtonFax_Click" Width="150" Height="40" HorizontalAlignment="Left" Visibility="{Binding Path=CloseButtonVisibility}">Change to Fax</Button>
        <Button Grid.Column="1" Grid.Row="2" Name="ButtonWeb" Margin="5,5,5,5" Click="ButtonWeb_Click" Width="150" Height="40" HorizontalAlignment="Center" Visibility="{Binding Path=CloseButtonVisibility}">Change To Web Service</Button>
        <Button Grid.Column="1" Grid.Row="2" Name="ButtonNext" Margin="5,5,5,5" Click="ButtonNext_Click" Width="150" Height="40" HorizontalAlignment="Right" Visibility="{Binding Path=CloseButtonVisibility}">Do Not Add</Button>

    </Grid>
</UserControl>
