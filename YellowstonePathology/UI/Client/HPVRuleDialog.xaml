<Window x:Class="YellowstonePathology.UI.Client.HPVRuleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YellowstonePathology.UI.Client"
        mc:Ignorable="d"
        Title="HPV Rules" Height="690" Width="1350" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <ListView Name="ListViewStandingOrders" Grid.Row="0" Margin="2,2,2,2" MouseDoubleClick="ListBoxStandingOrders_MouseDoubleClick"
							 ItemsSource="{Binding Path=StandingOrderViewCollection}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Rule" Width="290" DisplayMemberBinding="{Binding Path=StandingOrderName}" />
                    <GridViewColumn Header="Description" Width="1030" DisplayMemberBinding="{Binding Path=Description}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button Name="ButtonOK" Grid.Row="1" Margin="5" Height="30" Width="100" HorizontalAlignment="Right" Content="OK" Click="ButtonOK_Click" />

    </Grid>
</Window>
