<UserControl x:Class="YellowstonePathology.UI.Monitor.BlockCountMonitorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YellowstonePathology.UI.Monitor"
             xmlns:my="clr-namespace:YellowstonePathology.Business.Document;assembly=BusinessObjects">
    <Grid>
        <Grid.Resources>
            <Color x:Key="NormalColor">#e5fee7</Color>
            <SolidColorBrush x:Key="NormalBrush" Color="{StaticResource NormalColor}" />

            <Color x:Key="WarningColor">#fff697</Color>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />

            <Color x:Key="CriticalColor">#f8b3be</Color>
            <SolidColorBrush x:Key="CriticalBrush" Color="{StaticResource CriticalColor}" />
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Margin="10,10,10,10" FontSize="24">Block Count Monitor</TextBlock>

        <Grid Grid.Column="0" Grid.Row="1" Background="#e5fee7" Margin ="5, 5, 5, 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Margin ="5, 5, 50, 5" FontSize="50" FontWeight="Bold" TextAlignment="Right">Yellowstone Pathology Institute Blocks</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1" Margin ="5, 5, 5, 5" FontSize="50" FontWeight="Bold" TextAlignment="Center" Text="{Binding Path=BlockCount.YPIBlockCount}"></TextBlock>

            <TextBlock Grid.Column="1" Grid.Row="0" Margin ="50, 5, 5, 5" FontSize="50" FontWeight="Bold" TextAlignment="Right">Bozeman Blocks</TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="1" Margin ="5, 5, 5, 5" FontSize="50" FontWeight="Bold" TextAlignment="Center" Text="{Binding Path=BlockCount.BozemanBlockCount}"></TextBlock>
        </Grid>
    </Grid>
</UserControl>
