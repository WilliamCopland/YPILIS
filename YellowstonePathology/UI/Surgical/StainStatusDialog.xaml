<Window x:Class="YellowstonePathology.UI.Surgical.StainStatusDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YellowstonePathology.UI.Surgical"
        mc:Ignorable="d"
        Title="Stain Status" Width="900" Height="350" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height ="*" />
            <RowDefinition Height ="Auto" />
        </Grid.RowDefinitions>

        <ListView Name="ListViewTestOrders" Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Path=TestOrderStatusViewCollection}" Width="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=ReportNo}" Header="Report No" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=SlideOrderId}" Header="Stain Order Id" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=TestName}" Header="Test Name" Width="250"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=OrderTime, Converter={StaticResource MilitaryDateTimeConverterV2}}" Header="Ordered" Width="120"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=TestStatus}" Header="Status" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=TestStatusUpdateTime, Converter={StaticResource MilitaryDateTimeConverterV2}}" Header="Updated" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Name="ButonOk" Grid.Row="1" Margin="5,5,5,5" Height="30" Width="100" Click="ButonOk_Click" HorizontalAlignment="Right">OK</Button>
    </Grid>
</Window>
