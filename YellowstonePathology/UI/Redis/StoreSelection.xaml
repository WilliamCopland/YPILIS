<Window x:Class="YellowstonePathology.UI.Redis.StoreSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YellowstonePathology.UI.Redis"
        mc:Ignorable="d"
        Title="Redis Database Selection" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" Margin="2" Name="ListViewRedisDatabases"
				ItemsSource="{Binding Path=RedisDatabases}" MouseDoubleClick="ListViewRedisDatabases_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=.}" Width="290" Header="Databases" />
                </GridView>
            </ListView.View>
        </ListView>
            
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Name="ButtonSave" Grid.Column="0" Height="30" Width="80" Margin="2" Click="ButtonSave_Click">Save Selected</Button>
            <Button Name="ButtonOK" Grid.Column="1" Height="30" Width="80" Margin="2" HorizontalAlignment="Right" Click="ButtonOK_Click">OK</Button>
        </Grid>
    </Grid>
</Window>
