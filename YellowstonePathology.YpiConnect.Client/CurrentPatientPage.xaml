<Page x:Class="YellowstonePathology.YpiConnect.Client.CurrentPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:YellowstonePathology.YpiConnect.Client"
	Title="Current Patient Page">
    <Page.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Page.Resources>
    <Grid Margin="10,5,0,0">        
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="2,2,2,2" VerticalAlignment="Bottom">Patient:</TextBlock>
            <TextBlock Text="{Binding Path=PatientDisplayName}" Margin="2,2,2,2" FontSize="14" FontWeight="Bold" Foreground="#bc6d50"></TextBlock>            
        </StackPanel>        
    </Grid>
</Page>
